<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="24dp" />

            <!-- 主题设置部分 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主题模式"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <Spinner
                android:id="@+id/spinnerThemeMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_secondary"
                android:layout_marginBottom="24dp" />

            <!-- 功能设置部分 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功能设置"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_secondary"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <CheckBox
                    android:id="@+id/cbBootStartup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开机启动"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/button_teal"
                    android:checked="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开机后自动启动后台服务"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/cbBackgroundService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="后台驻留"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/button_teal"
                    android:checked="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="保持后台服务运行以提供定时提醒"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/cbAppReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="应用提醒"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/button_teal"
                    android:checked="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="检测特定应用使用并提醒打卡"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="32dp" />

            </LinearLayout>

            <!-- 其他设置 -->
            <Button
                android:id="@+id/btnCheckPermissions"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="检查应用权限"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/button_teal"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnClearData"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="清除应用数据"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/error_red"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnClearLogs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="清除日志"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/button_orange"
                android:layout_marginBottom="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/background_secondary"
                android:padding="20dp"
                android:text="HealthyLu - 健康鹿管记录助手"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="版本 1.0"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:background="@color/background_secondary"
                android:padding="16dp" />

            <Button
                android:id="@+id/btnAuthor"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="关于作者"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/button_orange"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>